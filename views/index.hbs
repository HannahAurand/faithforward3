<div class="index_body">
<div class="eventsContainer container">

{{#each events}}
<div class="event">
  <div class="col-sm-4 col-md-3.5">
    <div class="thumbnail">
      <a href="/events/show/{{id}}" class="show">
        <div class="imageContainer">
          <img src="{{image}}" alt="{{title}}">
        </div> 
      </a>
      <div class="caption">
        <h3 class="home-page-event-title">{{title}}</h3>
        <p class="description">{{description}}</p>
        <div class="whenContainer">
        <p><span class="when">Date:</span> {{date}}</p>
        <p><span class="when">Time:</span> {{time}}</p>
        <p><span class="when">Location:</span> {{location}}</p>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}
</div>
</div>


